set -e

OSMO_CLI_INSTALL_PATH="/usr/local/osmo"
OSMO_CLI_SYMLINK_PATH="/usr/local/bin"
OSMO_CLI_AUTOCOMPLETE_DIR="/usr/local/share/zsh/site-functions"

# Create symlink
ln -s -f "$OSMO_CLI_INSTALL_PATH/osmo" "$OSMO_CLI_SYMLINK_PATH/osmo"

# Setup autocomplete system-wide for zsh
if [ -f "$OSMO_CLI_INSTALL_PATH/autocomplete.zsh" ]; then
    echo "Adding zsh autocomplete script for OSMO."
    mkdir -p "$OSMO_CLI_AUTOCOMPLETE_DIR"
    cp "$OSMO_CLI_INSTALL_PATH/autocomplete.zsh" "$OSMO_CLI_AUTOCOMPLETE_DIR/_osmo"
    echo "Zsh autocomplete installed"

    if [[ ! " ${fpath[*]} " =~ " /usr/local/share/zsh/site-functions " ]]; then
        echo ""
        echo "######################################################################"
        echo "Note: /usr/local/share/zsh/site-functions is not in your fpath."
        echo "Run this command to enable autocomplete:"
        echo "######################################################################"
        echo ""
        echo "echo 'fpath=(/usr/local/share/zsh/site-functions \$fpath)' >> ~/.zshrc && echo 'autoload -Uz compinit && compinit' >> ~/.zshrc"
        echo ""
        echo "Then restart your terminal or run: source ~/.zshrc"
        echo "######################################################################"
        echo ""
    fi
fi

exit 0
