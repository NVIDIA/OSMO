{
  "name": "ui-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "cp node_modules/elkjs/lib/elk-worker.min.js public/elk-worker.min.js 2>/dev/null || true",
    "dev": "next dev --turbopack",
    "dev:local": "NEXT_PUBLIC_OSMO_API_HOSTNAME=localhost:8000 NEXT_PUBLIC_OSMO_SSL_ENABLED=false next dev --turbopack",
    "dev:mock": "NEXT_PUBLIC_MOCK_API=true next dev --turbopack",
    "build": "next build && pnpm compress",
    "compress": "node scripts/compress-assets.mjs",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc --noEmit",
    "generate-api": "cd .. && bazel run //src/service:export_openapi > ui-next/openapi.json && cd ui-next && orval",
    "generate-mocks": "orval --config orval.config.ts --project osmo-mocks",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "pnpm test && pnpm test:e2e",
    "validate": "pnpm type-check && pnpm lint && pnpm format:check && pnpm build && pnpm test:all"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-hookz/web": "^25.2.0",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "3.13.12",
    "@use-gesture/react": "^10.3.1",
    "@xyflow/react": "^12.10.0",
    "chrono-node": "^2.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "elkjs": "^0.11.0",
    "immer": "^11.1.3",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-error-boundary": "^6.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "usehooks-ts": "^3.1.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@next/bundle-analyzer": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "critters": "^0.0.25",
    "cssnano": "^7.0.6",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jsdom": "^27.3.0",
    "msw": "^2.12.4",
    "orval": "^7.17.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
